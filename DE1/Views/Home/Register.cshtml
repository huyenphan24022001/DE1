<body class="signup-body">
    <div class="agile-signup">

        <div class="content2">
            <div class="grids-heading gallery-heading signup-heading">
                <h2>Register</h2>
            </div>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">

                    <input placeholder="FullName" required type="text" name="FullName" value="">
                    @Html.ValidationMessageFor(u => u.FullName)
                </div>
                <div class="form-group">

                    <input placeholder="Username" required type="text" name="Username">
                    @Html.ValidationMessageFor(u => u.UserName)
                </div>
                <div class="form-group">

                    <input placeholder="Password" required id="Password" type="password" name="Pass">
                    @Html.ValidationMessageFor(u => u.Pass)
                </div>

                <div class="form-group">

                    <input placeholder="RePassword" required id="RePassword" type="password" name="RePassword">
                    <br />
                    @*<p id="error" style="color: red; display: none">Mật khẩu không trùng khớp</p>*@
                </div>
                <div class="form-group">

                    <input placeholder="CCCD" required id="CCCD" type="number" name="CCCD">
                    @Html.ValidationMessageFor(u => u.CCCD)
                </div>
                <div class="form-group">

                    <input placeholder="Phone" required id="Phone" type="tel" name="Phone">
                    @Html.ValidationMessageFor(u => u.Phone)
                </div>
                <input type="submit" class="register" value="Đăng ký">
            }


            @*<a href="index.html">Back To Home</a>*@
        </div>

        <!-- footer -->
        <div class="copyright">
            <p>© 2023 Colored . All Rights Reserved . Design by <a href="http://w3layouts.com/">W3layouts</a></p>
        </div>
        <!-- //footer -->

    </div>
    <script src="~/Content/js/proton.js"></script>
</body>


