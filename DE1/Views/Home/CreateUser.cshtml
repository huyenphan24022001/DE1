@model DE1.Models.User
@{
    ViewBag.Title = "CreataUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới người dùng</h2>

<div class="w3agile-validation w3ls-validation">
    <div class="panel panel-widget agile-validation">
        <div class="validation-grids widget-shadow" data-example-id="basic-forms">
            <div class="input-info">
                <h3>Thông tin người dùng :</h3>
            </div>
            @using (Html.BeginForm("Register", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">

                    <input class="form-control" placeholder="FullName" required type="text" name="FullName" value="">
                    @Html.ValidationMessageFor(u => u.FullName)
                </div>
                <div class="form-group">

                    <input class="form-control" placeholder="Username" required type="text" name="Username">
                    @Html.ValidationMessageFor(u => u.UserName)
                </div>
                <div class="form-group">

                    <input class="form-control" placeholder="Password" required id="Password" type="password" name="Pass">
                    @Html.ValidationMessageFor(u => u.Pass)
                </div>

                <div class="form-group">

                    <input class="form-control" placeholder="RePassword" required id="RePassword" type="password" name="RePassword">

                    @*<p id="error" style="color: red; display: none">Mật khẩu không trùng khớp</p>*@
                </div>
                <div class="form-group">

                    <input class="form-control" placeholder="CCCD" required id="CCCD" type="number" name="CCCD">
                    @Html.ValidationMessageFor(u => u.CCCD)
                </div>
                <div class="form-group">

                    <input class="form-control" placeholder="Phone" required id="Phone" type="tel" name="Phone">
                    @Html.ValidationMessageFor(u => u.Phone)
                </div>
                <div class="bottom">

                    <div class="form-group">
                        <button type="submit" onclick="return checkday()" class="btn btn-primary ">Thêm</button>
                    </div>
                    <div class="clearfix"> </div>
                </div>
               
            }
        </div>
    </div>
</div>



</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

